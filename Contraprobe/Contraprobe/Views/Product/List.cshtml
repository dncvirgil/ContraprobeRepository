@*@model IEnumerable<Contraprobe.Models.ProductModel>*@
@using PagedList.Mvc
@model PagedList.IPagedList<Contraprobe.Models.ProductModel> 

@{
    ViewBag.Title = "List";
}
<link href="~/Content/PagedList.css" rel="stylesheet" /> 
<h2>Lista produse</h2>

<p>
    @Html.ActionLink("Adauga produs nou", "Add")
</p>
<table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Packaging)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
            </th>

            <th>
                <p>Actiuni</p>
            </th>
            <th></th>
        </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Packaging)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Editare", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalii", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Stergere", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="pager">
    <p> Pagina @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) din @Model.PageCount</p>
    @Html.PagedListPager(Model, page => Url.Action("List", new { page }))
</div>
