@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li ><a href="javascript:document.getElementById('logoutForm').submit()" >Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: black !important"> Administrare <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Adauga utilizator", "Add", "User")</li>
                <li>@Html.ActionLink("Lista utilizatori", "List", "User")</li>
            </ul>
        </li>
        <li>@Html.ActionLink("Log out", "Login", "User", null, new { @class = "navbar-brand", @style = "color: black !important" })</li>
    </ul>
}
