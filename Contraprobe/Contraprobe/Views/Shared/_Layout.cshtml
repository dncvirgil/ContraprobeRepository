<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top", style="background-color: indianred">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Acasa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color: black !important" })
                @Html.ActionLink("Dashboard", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand", @style = "color: black !important" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: black !important"> Contraprobe <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Adauga proba noua", "Add", "Sample")</li>
                            <li>@Html.ActionLink("Lista probe", "List", "Sample")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="color: black !important"> Produse <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Adauga produs nou", "Add", "Product")</li>
                            <li>@Html.ActionLink("Lista produse", "List", "Product")</li>
                        </ul>
                    </li>




                    @*<li >@Html.ActionLink("Adauga proba", "Add", "Sample",null, new { @class = "navbar-brand", @style = "color: black !important" })</li>
                      <li>@Html.ActionLink("Lista probe", "List", "Sample", null, new { @class = "navbar-brand", @style = "color: black !important" })</li>
                      <li>@Html.ActionLink("Adauga produs", "Add", "Product", null, new { @class = "navbar-brand", @style = "color: black !important" })</li>
                      <li>@Html.ActionLink("Lista produse", "List", "Product", null, new { @class = "navbar-brand", @style = "color: black !important" })</li>*@


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Gestiune contraprobe</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
